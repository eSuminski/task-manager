{
  "name": "task-manager",
  "displayName": "task-manager",
  "description": "a task management system designed to work directly in vsc",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "task-manager.openTaskManager",
        "title": "Open Task Manager"
      }
    ],
    "keybindings":[
      {
        "command": "task-manager.openTaskManager",
        "key": "ctrl+alt+m"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --config webpack.webview.config.js",
    "watch": "webpack --watch --config webpack.webview.config.js",
    "package": "webpack --mode production --devtool hidden-source-map --config webpack.webview.config.js",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "e2e": "ts-node src/test/runners/smoke_runner.ts && ts-node src/test/runners/e2e_runner.ts",
    "record": "npx playwright test record -- --vscode-visible"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "20.x",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.25.1",
    "html-webpack-plugin": "^5.0.0",
    "playwright": "^1.54.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  }
}
